{
  "private": true,
  "workspaces": [
    "p5.layers",
    "p5.vector-arguments"
  ],
  "scripts": {
    "lint": "eslint .",
    "build:docs": "yarn build:docs:root && yarn build:docs:workspaces",
    "build:docs:root": "mkdir -p build && pandoc -dpandoc.yml README.md -o build/index.html",
    "build:docs:workspaces": "yarn workspaces foreach -v --no-private run build:docs",
    "prepare": "husky install",
    "test": "yarn workspaces foreach -tv run test"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.7",
    "@rollup/plugin-babel": "^5.3.0",
    "eslint": "^7.32.0",
    "husky": "^7.0.1",
    "jsdoc": "^3.6.7",
    "p5-server": "^0.6.1",
    "rollup": "^2.56.3",
    "rollup-plugin-terser": "^7.0.2"
  }
}
